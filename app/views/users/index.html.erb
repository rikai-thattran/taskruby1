<p style="color: green"><%= notice %></p>

<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |users| %>
      <tr class="cot">
        <td><%= users.name %></td>
        <td><%= users.email %></td>
        <td><%= link_to 'Show', users %></td>
        <td><%= link_to 'Edit', edit_user_path(users) %></td>
        <td><%= link_to 'Destroy', users, method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "New user", new_user_path %>
